<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Finger For Life</title>
    <link rel="stylesheet" href="stylesheets/homeStyle.css">


  </head>
  <body>
    <div class="stage-area">

    </div>

    <template id="homePage">
      <div class="titleContainer">
        <div class="leftFing">
          <img src="images/finga.png" alt="finger">
        </div>

        <div class="wordContainer">
          <div class="word">
            <p>FINGER <br> FOR <br> LIFE</p>
          </div>

          <button onclick="startClicked()">START</button>
          <button onclick="joinClicked()">JOIN</button>

        </div>

        <div class="rightFing">
          <img src="images/finga.png" alt="finger">
        </div>
      </div>
    </template>

    <template id="charPage">
      <h1>Welcome to the Char Page :)</h1>
      <button id="tryButton">Try it</button>

    </template>


    <!-- Mobile Page -->
    <template id="mobilePage">
      <link rel="stylesheet" href="stylesheets/mobileStyle.css">
      <div class="formContainer">
        <p>Enter the code from the desktop below:</p>
        <form>
          <input id="code" autocomplete="off" autofocus> <br>
          <button onclick="requestToJoin()">JOIN</button>
        </form>
      </div>
      <p id="joined"></p>

      <button onclick="toCharMobile()">Char mobile</button>

      <template id="charMobile">
        <h1>Welcome to char mobile :)</h1>
        <button onclick="emitButton()">Emit</button>
        <script src="/javascripts/charMobileScript.js"></script>
      </template>

      <script src="/javascripts/newJoinScript.js"></script>
    </template>

    <!-- Sync Page -->
    <template id="syncPage">
      <link rel="stylesheet" href="stylesheets/syncStyle.css">
      <div class="pageContainer">
        <div class="step1">
          <div class="step1Title">
            <h1>SYNC STEP 1</h1>
          </div>
          <p>Enter the link below in your smartphone or tablet browser.<br>
          The first person to connect is in charge of the game</p>
          <div class="link">
            <p>fingerforlife.herokuapp.com</p>
          </div>
        </div>

        <div class="step2">
          <div class="step2Title">
            <h1>SYNC STEP 2</h1>
          </div>
          <p>Enter the code below<br> on the mobile site.</p>
          <div class="wrapperCode">
            <p id="roomId"></p>
          </div>
        </div>
      </div>

      <div class="player">
        <div class="player1wrap">
          <div id="player1"></div>
        </div>
        <div class="player2wrap">
          <div id="player2"></div>
        </div>
        <button onclick="toChar()">char</button>
      </div>
      <script src="/javascripts/newSyncScript.js"></script>
    </template>

    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/utils/jquery-3.3.1.min.js"></script>
    <script src="javascripts/homeScript.js"></script>
    <!-- <script src="/javascripts/newSyncScript.js"></script> -->

  </body>

</html>
