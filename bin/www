#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('fingerforlife:server');
var http = require('http');
var socketIO = require('socket.io');
var {Users} = require('../public/javascripts/utils/users');

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
  * Create Socket.io Server
*/
var io = socketIO(server);

/**
  * Create Users Object
*/
var users = new Users();

/**
  * Listen to socket.io connection
*/
io.on('connection', function(socket){
  console.log('Client has been connected to socket.io');
  socket.on('disconnect', () => {
    console.log('Client has been disconnected');
  }),

  socket.on('hostJoinRoom', (msg) => {
    socket.join(msg, () => {
      let room = Object.keys(socket.rooms);
      console.log(`this host is joined in ${room}`);
    });
    users.removeUser(msg.id);
    users.addUser(msg.id, msg.room);
  }),

  socket.on('charDesktop', (msg) => {
    socket.emit('charDesktopAcc', msg);
  }),

  socket.on('toCharDesk', (msg) => {
    console.log(`A message from Char Mobile: ${msg}`);
    socket.emit('fromCharMobile', msg);
  }),

  socket.on('selectingChar', (val) => {
    var user = users.getUser(socket.id);
    socket.emit('charSelecting', val);
    console.log(`Player in room ${user.room} is selecting char number ${val}`);
  }),

  socket.on('selecting', (msg) => {
    console.log(msg);
    socket.emit('selectingAcc', msg);
  }),

  socket.on('charMobile', (msg) => {
    socket.emit('CharMobileAccepted', msg);
  }),

  socket.on('createMessage', (msg) => {
    console.log('msg just in');
    var user = users.getUser(socket.id);
    console.log(`user id is ${user.id}`);
    io.to(user.room).emit('messageCreated', msg);

  }),

  socket.on('requestToJoin', function(msg, callback){
    socket.join(msg.room);
    users.removeUser(msg.id);
    users.addUser(msg.id, msg.room);
    var user = users.getUser(msg.id);

    console.log(`a user with id: ${user.id} has joined in ${user.room}`);
    io.to(user.room).emit('requestAccepted', msg);
    socket.emit('joinSucceed', 'Welcome to the game :)');
    socket.broadcast.to(user.room).emit('joinSucceed', `a user with id: ${msg.id} is joined`);
  });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, (req, res) => {
  console.log("Listening to " + port);
});

//server.on('error', onError);
// server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
